<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar_imageView_latest_messages_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/username_textView_latest_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="username"
        app:layout_constraintStart_toEndOf="@+id/avatar_imageView_latest_messages_row"
        app:layout_constraintTop_toTopOf="@+id/avatar_imageView_latest_messages_row" />

    <TextView
        android:id="@+id/message_textView_latest_messages_row"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="message content"
        app:layout_constraintBottom_toBottomOf="@+id/avatar_imageView_latest_messages_row"
        app:layout_constraintStart_toStartOf="@+id/username_textView_latest_messages"
        app:layout_constraintTop_toBottomOf="@+id/username_textView_latest_messages" />
</android.support.constraint.ConstraintLayout>